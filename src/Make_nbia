MPICC = mpicc
CFLAGS = -c  -O3 
MPICCFLAGS=-DMPIMC	
all: NBIANN

%.o : %.c
	$(MPICC) $(CFLAGS) -DMPIMC -DNEW_BIA -o $@ -c $< -lm

NBIANN : sim_anneal.o  sa_impl.o mc_bond_lists.o  mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o mc_global.o mc_base_pairing.o mc_utils.o
	$(MPICC)       	sim_anneal.o sa_impl.o  mc_bond_lists.o  mc_cells.o mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o mc_utils.o -o NBIANN -lm -O3 
clean : 
	rm *.o NBIANN
