CFLAGS = -c -O3 -DFROZEN  -DTANN -DWARMUP 
MPICC = mpicc
#CFLAGS = -c -O3 -DWARMUP -DFROZEN
#CFLAGS = -c -O3 -DFROZEN -DSECONDSTC -DERMSDR -DNOCTCS
#CFLAGS = -c -O3 -DFROZEN -DERMSDR -DNOCTCS
#CFLAGS = -c -O3 
all: SIM_TMPR

%.o : %.c
	$(MPICC) $(CFLAGS) -DMPIMC -o $@ -c $< -lm


T_ANN : sim_anneal.o  sa_impl.o   mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o
