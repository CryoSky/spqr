SIM_TMPR : Sim_tempering.o  st_impl.o   mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o
	$(MPICC) Sim_tempering.o st_impl.o    mc_cells.o mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o -o SIM_TMPR -lm -O3 

MPIMC : mpi_mc.o    mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o
	$(MPICC)  	mpi_mc.o    mc_cells.o mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o  -o MPIMC -lm -O3  

