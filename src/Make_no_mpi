#CFLAGS = -c -O3 -DFROZEN 
#CFLAGS = -c -O3  -DFROZEN -DNOCTCS -DERMSDR
#CFLAGS = -c -O3 -DWARMUP -DFROZEN -DNOCTCS

CC=gcc


 %.o : %.c
	$(CC) $(CFLAGS) -o $@ -c $<


MC : mpi_mc.o    mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o
	$(CC)  	mpi_mc.o     mc_cells.o mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o  mc_utils.o mc_ermsd.o -o MC -lm -O3

PDBERMSD :  pdb_ermsd.o      mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o
	$(CC)  	pdb_ermsd.o     mc_cells.o mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o  mc_utils.o mc_ermsd.o -o PDBERMSD -lm -O3
clean: 
	rm *.o
	
T_ANN_JA : sim_anneal.o  sa_impl.o   mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o
	$(CC) sim_anneal.o sa_impl.o    mc_cells.o mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o mc_utils.o mc_ermsd.o -o T_ANN_JA -lm -O3
	