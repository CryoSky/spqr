CC=gcc
CFLAGS = -c -O3 -lm

 %.o : %.c
	$(CC) $(CFLAGS) -o $@ -c -DXYZDEBUG -DSECONDSTC $<

# %.o : %.c
#	$(CC) $(CFLAGS) -o $@ -c  -DWARMUP -DWRMVERB $<

XYZENERG :  xyz_energ.o  mc_bond_lists.o  mc_cells.o  mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o  mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o mc_utils.o
	$(CC)  	xyz_energ.o  mc_bond_lists.o  mc_cells.o mc_checkpoints.o  mc_end.o  mc_energies.o  mc_initialization.o mc_integrate.o  mc_verlet_lists.o  mc_global.o mc_base_pairing.o mc_utils.o -o XYZENERG -lm -O3 

clean: 
	rm *.o XYZENERG
